                                xmlns:local="clr-namespcae:MyMetroStyleApplication"
                                Title="MainWindow" Height="500" Width="800"
                                MinWidth="500"
                                WindowStartupLocation="CenterScreen"
                                Icon="Resources\Product_0001.ico">
